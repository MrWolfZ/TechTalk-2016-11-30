@model VolatilityDecomposition.Views.Shared.Components.ShoppingCart.Dto.ShoppingCart

<div class="row">
  <div class="col-xs-12">
    <h3>Cart</h3>
  </div>
  @foreach (var book in Model.Books)
  {
    <div class="col-xs-12">
      <h5>@Html.DisplayTextFor(m => book.Title)</h5>
      <span>@Html.DisplayTextFor(m => book.Price.CurrencyCode) @Html.DisplayTextFor(m => book.Price.Amount)</span>
      <br/>
      @using (Html.BeginForm("RemoveBook", "ShoppingCart", new { id = book.Id, q = @ViewBag.Query }, FormMethod.Post))
      {
        <input type="submit" class="btn btn-danger" value="Remove" style="margin: 5px 0 10px 0;" />
      }
    </div>
  }
  @if (Model.Books.Count == 0)
  {
    <div class="col-xs-12">
      <span>Shopping cart is empty!</span>
    </div>
  }
  <div class="col-xs-12">
    <h4>Total: @Html.DisplayTextFor(m => m.TotalPrice.CurrencyCode)  @Html.DisplayTextFor(m => m.TotalPrice.Amount)</h4>
  </div>
</div>